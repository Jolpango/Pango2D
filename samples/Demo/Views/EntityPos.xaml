<StackPanel
	Id="Panel"
	Gap="10"
	Orientation="Horizontal"
	Padding="10, 75"
	Anchor="TopRight">
	<Label
		Text="{Bind:Position}, format=Player position: {0}"
		BackgroundColor="rgba(0, 0, 0, 0)"
		BackgroundImage="UI/BeigePanel"
		NineSlice="8:8:8:8:4,0"
		FontSize="12"
		Opacity="0,5"
		MinSize="400, 50"
		TextAlign="Center"
		></Label>
</StackPanel>