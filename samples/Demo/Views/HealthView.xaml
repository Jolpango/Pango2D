<StackPanel
	Id="Panel"
	Gap="10"
	Orientation="Vertical"
	Padding="10, 10"
	Anchor="TopRight">
	<Label
		Text="{Bind:Health}, format=HP: {0}"
		BackgroundColor="rgba(0, 0, 0, 0)"
		BackgroundImage="UI/BeigePanel"
		NineSlice="8:8:8:8:4,0"
		FontSize="24"
		Opacity="0,5"
		MinSize="400, 50"
		TextAlign="Center"
		></Label>
</StackPanel>